{
  "name": "@colch/git-commit-msg",
  "description": "Adds emojis and infers commit context for people who use conventional commits",
  "homepage": "https://github.com/ColCh/git-commit-msg",
  "bugs": "https://github.com/ColCh/git-commit-msg/issues",
  "version": "2.0.0",
  "main": "index.js",
  "license": "MIT",
  "bin": "index.js",
  "files": [
    "index.js"
  ],
  "keywords": [
    "git",
    "commit",
    "hook",
    "emoji",
    "conventional",
    "conventional commits",
    "prepare-commit-msg",
    "commit-msg"
  ],
  "scripts": {
    "start": "node index.js",
    "test": "jest",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "lint": "eslint __tests__/*.js index.js",
    "prettify": "prettier-eslint __tests__/*.js index.js"
  },
  "dependencies": {
    "emoji-suggestions": "1.3.1",
    "emojilib": "2.4.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "babel-eslint": "10.1.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.3",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "prettier-eslint": "11.0.0",
    "prettier-eslint-cli": "5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".history"
    ]
  }
}
